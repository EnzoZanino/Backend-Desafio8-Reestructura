<section class="">
	{{#if user}}
		<div class="container">
			<h1>Bienvenido {{user.first_name}}!</h1>
			{{#if role.isAdmin}}
				<h3>Rol: Admin</h3>
			{{else if role.isUser}}
				<h3>Rol: Usuario</h3>
			{{else if role.isPremium}}
				<h3>Rol: Premium</h3>
			{{else}}
				<h3>Rol: Desconocido</h3>
			{{/if}}
		</div>
	{{/if}}
	<div class="container mt-4 mb-4">
		<a href="realTimeProducts" class="btn btn-success">Productos c/ websockets</a>
		<div class="row mb-4">
			{{#each products}}
				<div class="col-md-6 col-lg-4">
					<div class="card mt-4 bg-light" style="width: 100%;">
						<div
							class="img-container"
							style="width: 150px; height: 150px; overflow: hidden; margin: 0 auto;"
						>
							<img
								src="{{thumbnail}}"
								class="card-img-top"
								alt="{{title}}"
								style="width: 100%; height: 100%; object-fit: cover;"
							/>
						</div>
						<div class="card-body" style="height: 250px;">
							<h2 class="card-title text-info">{{title}}</h2>
							<p
								class="card-text description"
								style="font-weight: bold; font-size: 1.1em;"
							>{{description}}</p>
							<p class="card-text">Precio: ${{price}}</p>
							<p class="card-text">CÃ³digo: {{code}}</p>
							<p class="card-text">Stock: {{stock}}</p>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>